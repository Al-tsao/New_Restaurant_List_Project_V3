<div class="container mt-2">
  <form action="/create/new" method="POST">
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="name">中文名稱</label>
        <input type="text" class="form-control" name="name" value="" id="name" placeholder="中文名稱" required>
      </div>
      <div class="form-group col-md-4">
        <label for="name_en">英文名稱</label>
        <input type="text" class="form-control" name="name_en" value="" id="name_en" placeholder="英文名稱">
      </div>
      <div class="form-group col-md-4">
        <label for="name_en">分類</label>
        <input type="text" class="form-control" name="category" value="" id="category" placeholder="分類">
      </div>
    </div>
    <div class="form-group">
      <label for="image">圖片連結</label>
      <input type="text" class="form-control" name="image" value="" id="image" placeholder="圖片連結">
    </div>
    <div class="form-group">
      <label for="location">地址</label>
      <input type="text" class="form-control" name="location" value="" id="location" placeholder="地址">
    </div>
    <div class="form-group">
      <label for="description">餐廳描述</label>
      <input type="text" class="form-control" name="description" value="" id="description" placeholder="餐廳描述">
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="phone">電話</label>
        <input type="text" class="form-control" name="phone" value="" id="phone" placeholder="電話">
      </div>
      <div class="form-group col-md-5">
        <label for="google_map">goole地圖連結</label>
        <input type="text" class="form-control" name="google_map" value="" id="google_map" placeholder="goole地圖連結">
      </div>
      <div class="form-group col-md-3">
        <label for="rating">評分</label>
        <select name="rating" value="" id="rating" class="form-control" required>
          <option value="">
            <p class="blockquote-footer">評價越好分數越高</p>
          </option>
          <option {{#ifEqual restaurant.rating '1'}} selected {{/ifEqual}}>1</option>
          <option {{#ifEqual restaurant.rating '2'}} selected {{/ifEqual}}>2</option>
          <option {{#ifEqual restaurant.rating '3'}} selected {{/ifEqual}}>3</option>
          <option {{#ifEqual restaurant.rating '4'}} selected {{/ifEqual}}>4</option>
          <option {{#ifEqual restaurant.rating '5'}} selected {{/ifEqual}}>5</option>
        </select>
      </div>
    </div>
    <button type="submit" class="btn btn-outline-info btn-lg">建立新餐廳</button>
    <a href="/" class="btn btn-outline-info btn-lg">返回主頁</a>
  </form>
</div>