<!-- search bar -->
<div class="container search-bar">
  <div class="row">
    <div class="search-bar-outer col-12">
      <div class="search-bar-inner">
        <form action="/search">
          <h4 class="mb-2">尋找餐廳：</h4>
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="row justify-content-end info-bar">
    <a href="/create" class="btn btn-info btn-lg">新增餐廳</a>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/read/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>{{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
              <div class="mt-1 container">
                <div class="row justify-content-end">
                  <a href="/read/{{this._id}}" class="btn btn-outline-info">Detail</a>
                  <!-- <a href="/update/{{this._id}}" class="btn btn-outline-dark ml-2">Edit</a>
                  <form action="/delete/{{ this._id }}" method="GET" onsubmit="return deleteAlert()">
                    <button type="submit" class="btn btn-outline-danger ml-2">
                      <i class="fas fa-trash-alt" style="font-size: 16px;"></i>
                    </button>
                  </form>-->


                  <!-- Button trigger modal -->
                  <button type="button" class="btn btn-outline-danger ml-2" data-toggle="modal"
                    data-target="#delete{{this._id}}" value="">
                    <i class="fas fa-trash-alt" style="font-size: 16px;"></i>
                  </button>
                  <!-- Modal -->
                  <div class="modal fade" id="delete{{this._id}}" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title">刪除資訊確認</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          確定要刪除此筆餐廳資訊?
                        </div>
                        <div class="modal-footer">
                          <a href="/" class="btn btn-outline-info ml-2">返回</a>
                          <a href="/delete/{{ this._id }}" class="btn btn-outline-danger ml-2">確認</a>
                        </div>
                      </div>
                    </div>
                  </div>


                </div>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>